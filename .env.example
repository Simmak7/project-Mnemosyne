# Database Configuration
POSTGRES_DB=ai_notes_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://your_db_user:your_secure_password_here@db:5432/ai_notes_db

# JWT Authentication
SECRET_KEY=your-secret-key-min-32-characters-long-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (for Celery task queue)
REDIS_URL=redis://redis:6379/0

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434

# Backend Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# CORS Configuration
# For production, set to your actual frontend domain(s)
# Multiple origins can be comma-separated: https://app.example.com,https://www.example.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,Origin,X-Requested-With

# Security Configuration
# Set to 'true' in production with valid HTTPS certificate
ENABLE_HSTS=false
# Environment: development, staging, production
ENVIRONMENT=development

# Password Breach Checking (haveibeenpwned API)
# Set to 'false' to disable checking passwords against known data breaches
PASSWORD_CHECK_BREACH=true

# Mnemosyne Brain Configuration
# Model used for brain file generation and chat
BRAIN_MODEL=llama3.2:3b
# Maximum total context tokens for brain chat
BRAIN_MAX_CONTEXT_TOKENS=6000
# Token budget for core brain files (soul, mnemosyne, memory)
BRAIN_CORE_TOKEN_BUDGET=2500
# Token budget for topic files loaded per query
BRAIN_TOPIC_TOKEN_BUDGET=3000
# Temperature for brain chat responses (higher = more creative)
BRAIN_TEMPERATURE=0.7
# Minimum number of notes required to build a brain
BRAIN_MIN_NOTES=3

# Frontend Configuration
# API URL for frontend (used by React app)
# For production, set to your actual backend URL
REACT_APP_API_URL=http://localhost:8000
