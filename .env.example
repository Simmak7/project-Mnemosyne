# Database Configuration
POSTGRES_DB=ai_notes_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://your_db_user:your_secure_password_here@db:5432/ai_notes_db

# JWT Authentication
SECRET_KEY=your-secret-key-min-32-characters-long-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (for Celery task queue)
REDIS_URL=redis://redis:6379/0

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434

# Backend Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
